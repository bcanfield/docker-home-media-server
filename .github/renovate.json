{
  "extends": [
    "config:recommended",
    ":semanticCommits"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major"
      ],
      "commitBody": "Change-type: {{updateType}}"
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "commitBody": "Change-type: {{updateType}}",
      "automerge": true
    }
  ],
  "prHourlyLimit": 8
}